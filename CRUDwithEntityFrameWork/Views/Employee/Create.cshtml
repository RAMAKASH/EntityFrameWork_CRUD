@model CRUDwithEntityFrameWork.Models.Employee
@{
}

<div class="row">
    <div class="col-6 offset-3">
        <form asp-action="Create" asp-controller="Employee" method="post">
            <div class="form-group">
                <lable asp-for="Name">Name</lable>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <lable asp-for="Email">Email</lable>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <lable asp-for="Mobile">Mobile</lable>
                <input asp-for="Mobile" class="form-control" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <lable asp-for="Address">Address</lable>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
            
        </form>
    </div>
</div>